# Runtime
APP_NAME=portfolio_core
ENV=prod
LOG_LEVEL=info
HOST=0.0.0.0
PORT=8000

# CORS for Mini App support (CSV list)
# Example: CORS_ALLOW_ORIGINS="https://mydomain.com,https://anotherdomain.com"
CORS_ALLOW_ORIGINS=

# Database
DB_PATH=/app/data/portfolio.db

# External Services
MARKET_DATA_URL=http://market_data:8000
FX_URL=http://fx:8000

# Telegram (for Mini App auth redirect only)
TELEGRAM_BOT_TOKEN=
INITDATA_MAX_AGE_SEC=3600

# Portfolio Configuration
DEFAULT_ETF_TARGET=60
DEFAULT_STOCK_TARGET=30
DEFAULT_CRYPTO_TARGET=10

# Feature Flags
ENABLE_SNAPSHOT_MAINTENANCE=true
ENABLE_PERFORMANCE_ANALYTICS=true

# Cache and Performance (if needed)
CACHE_PATH=/app/data/cache
CACHE_TTL_SEC=300

# Security (if shared secrets are used)
# ROUTER_SHARED_SECRET=<set-on-server>