#############################
# Telegram Router .env (dev)
#############################

# Telegram
# Bot token from @BotFather. Leave blank if not using polling/test endpoints.
TELEGRAM_BOT_TOKEN=

# 64-char random secret for webhook validation header
TELEGRAM_WEBHOOK_SECRET=

# webhook | polling (polling is easiest for local dev)
TELEGRAM_MODE=polling

# MarkdownV2 is used for all replies
REPLY_PARSE_MODE=MarkdownV2


# Router
# Service port and logging level
ROUTER_PORT=8010
ROUTER_LOG_LEVEL=info

# Session TTL in seconds (5 min default)
ROUTER_SESSION_TTL_SEC=300

# Comma-separated Telegram user IDs allowed to use the bot
ROUTER_OWNER_IDS=

# Data paths (mounted writable in Compose)
IDEMPOTENCY_PATH=/app/data/idempotency.json
SESSIONS_DIR=/app/data/sessions

# Config paths (mounted read-only in Compose)
REGISTRY_PATH=/config/commands.json
UI_PATH=/config/ui.yml


# Upstreams (internal DNS within Compose network)
MARKET_DATA_URL=http://market_data:8000
PORTFOLIO_CORE_URL=http://portfolio_core:8000
FX_URL=http://fx:8000


# HTTP client
HTTP_TIMEOUT_SEC=8.0
HTTP_RETRIES=2
